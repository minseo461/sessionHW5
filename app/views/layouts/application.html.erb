<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= link_to "HOME", root_url %> 
   <% if current_user %> 
       Logged in as <%= current_user.email %>. 
       <%= link_to "LOG-OUT", session_path(current_user.id), method: :delete %> 
       <%= link_to 'ADMIN', edit_user_path(current_user.id) %>
       <%= link_to 'Moder', moder_user_path(current_user.id) %>
       <%= link_to "NEW POST", new_content_path %> 
   <% else %> 
       <%= link_to "JOIN", new_user_path %> 
       <%= link_to "LOG-IN", new_session_path %> 
   <% end %> 
   <br> 

<%= yield %>

</body>
</html>
